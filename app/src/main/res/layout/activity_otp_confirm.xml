<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/otp_back_arrow_imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác Nhận Mã OTP"
        android:textColor="#CC7861"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã xác nhận của bạn đã được gửi về địa chỉ conk...9@gmail.com"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- OTP Boxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:weightSum="6">

        <EditText
            android:id="@+id/otptest1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"
            android:layout_margin="4dp" />

        <EditText
            android:id="@+id/otptest2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"
            android:layout_margin="4dp" />

        <EditText
            android:id="@+id/otptest3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"
            android:layout_margin="4dp" />

        <EditText
            android:id="@+id/otptest4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"
            android:layout_margin="4dp" />

        <EditText
            android:id="@+id/otptest5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"
            android:layout_margin="4dp" />

        <EditText
            android:id="@+id/otptest6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_otp_guilaima"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:text="Gửi Lại Mã"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:textColor="#CC7861"
            android:layout_margin="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_otp_xacnhan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:text="Xác nhận"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:textColor="#CC7861"
            android:layout_margin="8dp" />

    </LinearLayout>

</LinearLayout>